<?xml version="1.0" encoding="UTF-8"?>

<style-scheme id="rafcon" _name="RAFCON" version="1.0">
  <author>Martin Gl√ºckler, Franz Steinmetz</author>

  <color name="rafcon" value="#2896ff"/>
  <color name="text" value="#5b5b5b"/>
  <color name="content-bg" value="#ffffff"/>
  <color name="highlight-bg" value="#f4f4f4"/>
  <color name="special-fg" value="#3490fb"/>
  <color name="number-fg" value="#f5a623"/>
  <color name="string-fg" value="#43d88f"/>
  <color name="error" value="#ff3300"/>
  <color name="reserved" value="#57a4c6"/>

  <style name="bracket-match" foreground="special-fg" bold="true"/>
  <style name="bracket-mismatch" background="error" underline="true"/>
  <style name="line-numbers" foreground="#a8a8a8"/>
  <style name="current-line" background="highlight-bg"/>
  <style name="current-line-number" background="highlight-bg"/>
  <style name="cursor" foreground="#5b5b60"/>
  <style name="def:base-n-integer" foreground="number-fg"/>
  <style name="def:boolean" foreground="special-fg"/>
  <style name="def:builtin" foreground="reserved"/>
  <style name="def:character" foreground="string-fg"/>
  <style name="def:comment" foreground="#a3a3a3"/>
  <style name="def:complex" foreground="number-fg"/>
  <style name="def:decimal" foreground="number-fg"/>
  <style name="def:floating-point" foreground="number-fg"/>
  <style name="def:function" foreground="#64afb3"/>
  <style name="def:keyword" foreground="reserved" bold="true"/> <!-- def, pass, return -->
  <style name="def:number" foreground="number-fg"/>
  <style name="def:operator" foreground="text"/>
  <style name="def:special-constant" foreground="#64afb3"/>
  <style name="def:statement" foreground="#508baa"/>
  <style name="def:string" foreground="string-fg"/>
  <style name="python:class-name" foreground="text"/>
  <style name="python:builtin-constant" foreground="special-fg"/>
  <style name="python:builtin-function" foreground="special-fg"/>
  <style name="python:builtin-object" foreground="special-fg"/>
  <style name="python:module-handler" foreground="reserved" bold="true"/>
  <style name="python:boolean" foreground="special-fg"/>
  <style name="python:decorator" foreground="numbers"/>
  <style name="python:special-variable" foreground="special-fg"/> <!-- self -->
  <style name="selection" background="rafcon"/>
  <style name="text" foreground="text" background="content-bg"/>

  <!-- NOT USED
  <style name="def:note" foreground="#75715e"/>
  <style name="search-match" background="#33333c" bold="true" underline="true"/>
  <style name="draw-spaces" foreground="#3b3a32"/>
  <style name="diff:location" foreground="#75715e"/>
  <style name="def:shebang" foreground="#75715e"/>
  <style name="def:special-char" foreground="#66d9ef"/>
  <style name="def:preprocessor" foreground="#66d9ef"/>
  <style name="def:identifier" foreground="#ff0000"/>
  <style name="def:doc-comment" foreground="#75715e"/>
  <style name="def:doc-comment-element" foreground="#75715e"/>
  <style name="def:error" foreground="#f8f8f0" background="#f92672"/>
  -->

</style-scheme> 
